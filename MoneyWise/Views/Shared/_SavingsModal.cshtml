<div class="modal fade" id="savingsModal" tabindex="-1" role="dialog" aria-labelledby="savingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title" id="savingsModalLabel">Savings Transaction</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editSavingsForm">
                    <div class="mb-3 text-start">
                        <label for="savingsAmount" class="form-label">Amount</label>
                        <input type="number" class="form-control" id="savingsAmount" name="savingsAmount" step="0.01" min="0" required>
                        <div class="invalid-feedback">
                            Please enter a valid amount.
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="actionType" id="depositBtn" value="deposit" required>
                            <label class="btn btn-outline-success" for="depositBtn">
                                <i class="fas fa-plus"></i> Deposit
                            </label>
                            
                            <input type="radio" class="btn-check" name="actionType" id="withdrawBtn" value="withdraw" required>
                            <label class="btn btn-outline-danger" for="withdrawBtn">
                                <i class="fas fa-minus"></i> Withdraw
                            </label>
                        </div>
                        <div class="invalid-feedback">
                            Please select an action type.
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="editSavingsForm" class="btn btn-primary" id="submitSavingsBtn" disabled>
                    <i class="fas fa-save"></i> Save Transaction
                </button>
            </div>
        </div>
    </div>
</div>