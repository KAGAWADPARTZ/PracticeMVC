<div class="modal fade" id="savingsModal" tabindex="-1" aria-labelledby="savingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title" id="savingsModalLabel">Edit Savings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editSavingsForm">
                    <div class="mb-3 text-start">
                        <label for="savingsAmount" class="form-label">Savings Amount</label>
                        <input type="number" class="form-control" id="savingsAmount" name="savingsAmount" required>
                    </div>
                    <div class="mb-3 text-start">
                        <label for="savingsGoal" class="form-label">Goal</label>
                        <input type="text" class="form-control" id="savingsGoal" name="savingsGoal" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="editSavingsForm" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>
