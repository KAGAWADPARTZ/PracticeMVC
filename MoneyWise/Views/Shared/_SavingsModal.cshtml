<div class="modal fade" id="savingsModal" tabindex="-1" role="dialog" aria-labelledby="savingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title" id="savingsModalLabel">Edit Savings</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editSavingsForm">
                    <div class="form-group text-left">
                        <label for="savingsAmount">Savings Amount</label>
                        <input type="number" class="form-control" id="savingsAmount" name="savingsAmount" required>
                    </div>
                    <div class="form-group text-left">
                        <label for="savingsGoal">Goal</label>
                        <input type="text" class="form-control" id="savingsGoal" name="savingsGoal" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" form="editSavingsForm" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>
