@model List<MoneyWise.Models.BudgetRules>
@{
    ViewData["Title"] = "Moneywise";
}

@section Styles {
    <link rel="stylesheet" href="~/css/budget-rules.css" />
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Budget Rules</h1>
    <div>
        <button type="button" class="btn btn-primary btn-sm mr-2" data-toggle="modal" data-target="#budgetRuleModal">
            <i class="fas fa-plus"></i> Add Budget Rule
        </button>
        <button type="button" class="btn btn-success btn-sm mr-2" onclick="refreshBudgetRules()">
            <i class="fas fa-sync-alt"></i> Refresh
        </button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Budget Rules Card -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-chart-pie"></i> Your Budget Rules
        </h6>
        <div class="dropdown no-arrow">
            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                <div class="dropdown-header">Budget Options:</div>
                <a class="dropdown-item" href="#" onclick="exportToCSV()">
                    <i class="fas fa-download fa-sm fa-fw mr-2 text-gray-400"></i>Export to CSV
                </a>
                <a class="dropdown-item" href="#" onclick="printBudgetRules()">
                    <i class="fas fa-print fa-sm fa-fw mr-2 text-gray-400"></i>Print Budget Rules
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="budgetRulesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Percentage</th>
                            <th>Last Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var budgetRule in Model.OrderByDescending(b => b.updated_at))
                        {
                            <tr>
                                <td>
                                    <strong>Savings</strong>
                                    <br>
                                    <small class="text-muted">Emergency fund, investments, retirement</small>
                                </td>
                                <td class="text-success">
                                    <strong>₱@budgetRule.Savings.ToString("F2")</strong>
                                    <i class="fas fa-piggy-bank text-success ml-1"></i>
                                </td>
                                <td>
                                    @{
                                        var savingsPercentage = budgetRule.TotalAmount > 0 ? (budgetRule.Savings * 100.0 / budgetRule.TotalAmount).ToString("F1") : "0.0";
                                    }
                                    <span class="badge badge-success">@savingsPercentage%</span>
                                </td>
                                <td>
                                    @if (budgetRule.updated_at.HasValue)
                                    {
                                        <span title="@budgetRule.updated_at.Value.ToString("yyyy-MM-dd HH:mm:ss")">
                                            @budgetRule.updated_at.Value.ToString("MMM dd, yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary mr-1" onclick="editBudgetRule(@budgetRule.BudgetRulesID)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteBudgetRule(@budgetRule.BudgetRulesID)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Needs</strong>
                                    <br>
                                    <small class="text-muted">Housing, utilities, food, transportation</small>
                                </td>
                                <td class="text-warning">
                                    <strong>₱@budgetRule.Needs.ToString("F2")</strong>
                                    <i class="fas fa-home text-warning ml-1"></i>
                                </td>
                                <td>
                                    @{
                                        var needsPercentage = budgetRule.TotalAmount > 0 ? (budgetRule.Needs * 100.0 / budgetRule.TotalAmount).ToString("F1") : "0.0";
                                    }
                                    <span class="badge badge-warning">@needsPercentage%</span>
                                </td>
                                <td>
                                    @if (budgetRule.updated_at.HasValue)
                                    {
                                        <span title="@budgetRule.updated_at.Value.ToString("yyyy-MM-dd HH:mm:ss")">
                                            @budgetRule.updated_at.Value.ToString("MMM dd, yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary mr-1" onclick="editBudgetRule(@budgetRule.BudgetRulesID)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteBudgetRule(@budgetRule.BudgetRulesID)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Wants</strong>
                                    <br>
                                    <small class="text-muted">Entertainment, dining out, shopping</small>
                                </td>
                                <td class="text-info">
                                    <strong>₱@budgetRule.Wants.ToString("F2")</strong>
                                    <i class="fas fa-shopping-cart text-info ml-1"></i>
                                </td>
                                <td>
                                    @{
                                        var wantsPercentage = budgetRule.TotalAmount > 0 ? (budgetRule.Wants * 100.0 / budgetRule.TotalAmount).ToString("F1") : "0.0";
                                    }
                                    <span class="badge badge-info">@wantsPercentage%</span>
                                </td>
                                <td>
                                    @if (budgetRule.updated_at.HasValue)
                                    {
                                        <span title="@budgetRule.updated_at.Value.ToString("yyyy-MM-dd HH:mm:ss")">
                                            @budgetRule.updated_at.Value.ToString("MMM dd, yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary mr-1" onclick="editBudgetRule(@budgetRule.BudgetRulesID)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteBudgetRule(@budgetRule.BudgetRulesID)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-chart-pie fa-3x text-gray-300 mb-3"></i>
                <h5 class="text-gray-500">No budget rules found</h5>
                <p class="text-gray-400">You haven't set up your budget rules yet.</p>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#budgetRuleModal">
                    <i class="fas fa-plus"></i> Create Your First Budget Rule
                </button>
            </div>
        }
    </div>
</div>

<!-- Budget Rules Summary Cards -->
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Income
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalIncome">
                            ₱@(Model?.FirstOrDefault()?.TotalAmount.ToString("F2") ?? "0.00")
                        </div>
                    </div>
                    <div class="col-auto">  
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Savings
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalSavings">
                            ₱@(Model?.FirstOrDefault()?.Savings.ToString("F2") ?? "0.00")
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-piggy-bank fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Total Needs
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalNeeds">
                            ₱@(Model?.FirstOrDefault()?.Needs.ToString("F2") ?? "0.00")
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-home fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Wants
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalWants">
                            ₱@(Model?.FirstOrDefault()?.Wants.ToString("F2") ?? "0.00")
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Budget Rule Modal -->
<div class="modal fade" id="budgetRuleModal" tabindex="-1" role="dialog" aria-labelledby="budgetRuleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="budgetRuleModalLabel">Add Budget Rule</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="budgetRuleForm">
                <div class="modal-body">
                    <input type="hidden" id="budgetRuleId" name="BudgetRulesID" />
                    
                    <!-- Total Income Section -->
                    <div class="form-group">
                        <label for="totalAmount" class="font-weight-bold text-primary">
                            <i class="fas fa-dollar-sign"></i> Total Monthly Income
                        </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">₱</span>
                            </div>
                            <input type="number" class="form-control" id="totalAmount" name="TotalAmount" step="1" min="0" required 
                                   placeholder="Enter your total monthly income">
                        </div>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> This is your total monthly income before any deductions
                        </small>
                    </div>

                    <hr class="my-4">

                    <!-- Custom Budget Rule Breakdown -->
                    <h6 class="text-center text-info mb-3">
                        <i class="fas fa-chart-pie"></i> Custom Budget Rule Breakdown
                    </h6>

                    <!-- Savings Section -->
                    <div class="form-group">
                        <label for="savingsPercentage" class="font-weight-bold text-success">
                            <i class="fas fa-piggy-bank"></i> Savings Percentage
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="savingsPercentage" step="0.1" min="0" max="100" value="50" 
                                   placeholder="Enter percentage (e.g., 50)">
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                        <small class="form-text text-muted">
                            <i class="fas fa-lightbulb"></i> Emergency fund, investments, retirement savings
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="savingsAmount" class="font-weight-bold text-success">
                            <i class="fas fa-piggy-bank"></i> Savings Amount
                        </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">₱</span>
                            </div>
                            <input type="number" class="form-control" id="savingsAmount" name="Savings" step="1" min="0" required 
                                   placeholder="Calculated automatically" readonly>
                        </div>
                    </div>

                    <!-- Needs Section -->
                    <div class="form-group">
                        <label for="needsPercentage" class="font-weight-bold text-warning">
                            <i class="fas fa-home"></i> Needs Percentage
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="needsPercentage" step="0.1" min="0" max="100" value="30" 
                                   placeholder="Enter percentage (e.g., 30)">
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                        <small class="form-text text-muted">
                            <i class="fas fa-lightbulb"></i> Housing, utilities, food, transportation, insurance
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="needsAmount" class="font-weight-bold text-warning">
                            <i class="fas fa-home"></i> Needs Amount
                        </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">₱</span>
                            </div>
                            <input type="number" class="form-control" id="needsAmount" name="Needs" step="1" min="0" required 
                                   placeholder="Calculated automatically" readonly>
                        </div>
                    </div>

                    <!-- Wants Section -->
                    <div class="form-group">
                        <label for="wantsPercentage" class="font-weight-bold text-info">
                            <i class="fas fa-shopping-cart"></i> Wants Percentage
                        </label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="wantsPercentage" step="0.1" min="0" max="100" value="20" 
                                   placeholder="Enter percentage (e.g., 20)">
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                        <small class="form-text text-muted">
                            <i class="fas fa-lightbulb"></i> Entertainment, dining out, shopping, hobbies
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="wantsAmount" class="font-weight-bold text-info">
                            <i class="fas fa-shopping-cart"></i> Wants Amount
                        </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">₱</span>
                            </div>
                            <input type="number" class="form-control" id="wantsAmount" name="Wants" step="1" min="0" required 
                                   placeholder="Calculated automatically" readonly>
                        </div>
                    </div>

                    <!-- Validation Summary -->
                    <div class="alert alert-info mt-3" id="validationSummary" style="display: none;">
                        <i class="fas fa-calculator"></i>
                        <strong>Budget Summary:</strong>
                        <div id="budgetSummaryText"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Budget Rule</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/BudgetRules.js"></script>
}
